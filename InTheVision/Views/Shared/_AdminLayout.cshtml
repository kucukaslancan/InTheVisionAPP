@{ 
    if (Session["logined"] == null)
     {
         Response.Redirect("~/Admin/Login");
     }
}
     

<!DOCTYPE html>
<html class='no-js' lang='en'>
<head>
    <meta charset='utf-8'>
    <meta content='IE=edge,chrome=1' http-equiv='X-UA-Compatible'>
    <title>Yönetim Paneli - @ViewBag.Title</title>

    <script src="https://code.jquery.com/jquery-1.11.3.js"></script>
    <link href="/app/assets/stylesheets/application-a07755f5.css" rel="stylesheet" type="text/css" />
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="assets/images/favicon.ico" rel="icon" type="image/ico" />

</head>
<body class='main page'>
    <!-- Navbar -->
    <div class='navbar navbar-default' id='navbar'>
        <a class='navbar-brand' href='#'>
            <i class='icon-beer'></i>
           Yönetim Paneli
        </a>
        <ul class='nav navbar-nav pull-right'>
           
           
            <li class='dropdown user'>
                <a class='dropdown-toggle' data-toggle='dropdown' href='#'>
                    <i class='icon-user'></i>
                    <strong>@Session["logined"]</strong>
                    <img class="img-rounded" src="http://placehold.it/20x20/ccc/777" />
                    <b class='caret'></b>
                </a>
                <ul class='dropdown-menu'>
                   
                   
                    <li>
                        @Html.ActionLink("Logout", "logout", "Admin");
                       
                    </li>
                </ul>
            </li>
        </ul>
    </div>
    <div id='wrapper'>
        <!-- Sidebar -->
        <section id='sidebar'>
            <i class='icon-align-justify icon-large' id='toggle'></i>
            <ul id='dock'>
                <li class='active launcher'>
                    <i class='icon-dashboard'></i>
                    <a href="/Admin">Anasayfa</a>
                </li>
                <li class='launcher dropdown hover'>
                    <i class='icon-flag'></i>
                    <a href='#'>Film</a>
                    <ul class='dropdown-menu'>
                        <li class='dropdown-header'>Film İşlemleri</li>
                        <li>
                            @Html.ActionLink("Filmleri Listele", "listMovies", "Admin")
                        </li>
                        <li>
                            @Html.ActionLink("Film Ekle", "AddMovie", "Admin")
                        </li>
                        
                    </ul>
                </li>
               
             
            </ul>
            <div data-toggle='tooltip' id='beaker' title='CK'></div>
        </section>
        <!-- Tools -->
        <section id='tools'>
            <ul class='breadcrumb' id='breadcrumb'>
                <li class='title'>Ne İzlesem? Yönetim Paneli</li>
                
            </ul>
             
        </section>
        <!-- Content -->
        <div id='content'>
           
            @RenderBody()

        </div>
    </div>
    <!-- Footer -->
    <!-- Javascripts -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js" type="text/javascript"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js" type="text/javascript"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.6.2/modernizr.min.js" type="text/javascript"></script>
    <script src="/app/assets/javascripts/application-985b892b.js" type="text/javascript"></script>
    <!-- Google Analytics -->
   
</body>
</html>
